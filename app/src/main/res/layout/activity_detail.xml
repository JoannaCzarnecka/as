<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/abc_ab_bottom_transparent_dark_holo">

    <TextView
        android:id="@+id/texttitle"
        android:text="Nazwa: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/texttitle"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textintroduction"
        android:text="Opis: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"/>

    <TextView
        android:id="@+id/introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textintroduction"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textingredients"
        android:text="Składniki: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/introduction"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textingredients"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textsteps"
        android:text="Sposób przyrządzenia: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredients"/>

    <TextView
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textsteps"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textcreated"
        android:text="Data dodania: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/steps"/>

    <TextView
        android:id="@+id/created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textcreated"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textpreparationMinutes"
        android:text="Czas przygotowania: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/created"/>

    <TextView
        android:id="@+id/preparationMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textpreparationMinutes"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textcookingMinutes"
        android:text="Czas gotowania: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/preparationMinutes"/>

    <TextView
        android:id="@+id/cookingMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textcookingMinutes"
        android:layout_marginBottom="2dp"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/textservings"
        android:text="Porcje: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cookingMinutes"/>

    <TextView
        android:id="@+id/servings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textservings"
        android:singleLine="false"/>

    <Button
        android:id="@+id/komentarze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komentarze"
        android:layout_below="@+id/servings"/>

</RelativeLayout>