<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/abc_ab_bottom_transparent_dark_holo">

    <EditText
        android:id="@+id/title"
        android:hint="Nazwa przepisu (wymagane)"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/introduction"
        android:hint="Wprowadzenie"
        android:inputType="text"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/title"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/ingredients"
        android:hint="Składniki (wymagane)"
        android:inputType="text"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/introduction"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/steps"
        android:hint="Sposób przygotowania (wymagane)"
        android:inputType="text"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/ingredients"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/preparationMinutes"
        android:hint="Czas przygotowania (min)"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/steps"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/cookingMinutes"
        android:hint="Czas gotowania (min)"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/preparationMinutes"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/servings"
        android:hint="Liczba porcji (wymagane)"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/cookingMinutes"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gotowe"
        android:layout_below="@id/servings"/>

</RelativeLayout>